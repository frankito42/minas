<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inicio de Sesión</title>
    <%- include('../partials/headcss.ejs'); %>
</head>
<body class="bg-gray-900 ">
    <div class="text-white flex items-center justify-center h-screen">
        <div style="background: rgb(64 64 64);" class="p-8 rounded shadow-md w-96">
            <h1 style="background: #353638;padding: 2%;border-radius: 5px;text-align: center;font-weight: bold;" class="text-2xl font-semibold mb-4"><span>Iniciar Sesión</span></h1>
            <form id="formularioLogin">
                <div class="mb-4">
                    <label for="user" class="block text-sm font-medium text-gray-300">User</label>
                    <input type="user" id="user" name="user" class="mt-1 p-2 w-full border rounded bg-gray-700 text-white">
                </div>
                <div class="mb-4">
                    <label for="pass" class="block text-sm font-medium text-gray-300">Pass</label>
                    <input type="pass" id="pass" name="pass" class="mt-1 p-2 w-full border rounded bg-gray-700 text-white">
                </div>
                <div class="text-center">
                    <button type="submit" class="w-full bg-indigo-500 text-white px-4 py-2 rounded hover:bg-indigo-600">Iniciar Sesión</button>
                </div>
            </form>
        </div>
    </div>
</body>
<%- include('../partials/fotter.ejs'); %>
<script src="/login.js"></script>
</html>

